<Window x:Class="STudentInternshipApplication.Internship.InternshipViews.Internships"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Internships" Height="200" Width="511.111">
    <Grid>
        <DataGrid ItemsSource="{Binding InternshipData}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="95" Width="471"/>
        <Button Content="Add Internship" Command="{Binding OpenAddInternship}" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Remove Internship" Command="{Binding OpenRemoveInternship}" HorizontalAlignment="Left" Margin="109,120,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click"/>
        <Button Content="Edit Internship" Command="{Binding OpenEditInternship}" HorizontalAlignment="Left" Margin="236,120,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click_2"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="342,120,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>

    </Grid>
</Window>
