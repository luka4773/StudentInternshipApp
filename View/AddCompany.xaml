<Window x:Class="STudentInternshipApplication.Company.CompanyViews.AddCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddCompany" Height="165.556" Width="235.556">
    <Grid Margin="0,0,2,3">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="86,10,0,0" TextWrapping="Wrap" Text="{Binding CompanyName}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="86,38,0,0" TextWrapping="Wrap" Text="{Binding CompanyAddress}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="86,66,0,0" TextWrapping="Wrap" Text="{Binding CompanyEmail}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top"/>
        <Button Content="Add Company" Command="{Binding AddCompany}" HorizontalAlignment="Left" Margin="119,106,0,0" VerticalAlignment="Top" Width="87"/>
        <Button Content="Done" Command="{Binding CloseAddCompany}" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
