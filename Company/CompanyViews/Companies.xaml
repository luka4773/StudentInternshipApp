<Window x:Class="STudentInternshipApplication.Company.CompanyViews.Companies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Companies" Height="245.556" Width="464.444">
    <Grid Margin="0,0,-8,0">
        <DataGrid ItemsSource="{Binding Companies}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="160" Width="380"/>
        <Button Content="Add Company" Command="{Binding OpenAddCompany}" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Remove a company" Command="{Binding OpenRemoveCompanyCommand}" HorizontalAlignment="Left" Margin="108,194,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_1"/>

    </Grid>
</Window>
